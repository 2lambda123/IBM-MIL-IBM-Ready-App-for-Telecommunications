<mfp:adapter name="CloudantGeoAdapter"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:mfp="http://www.ibm.com/mfp/integration"
	xmlns:http="http://www.ibm.com/mfp/integration/http">

	<displayName>CloudantGeoAdapter</displayName>
	<description>CloudantGeoAdapter</description>
	<connectivity>
		<connectionPolicy xsi:type="mfp:NullConnectionPolicyType"></connectionPolicy>
	</connectivity>
	
	<JAXRSApplicationClass>com.ibm.mil.readyapps.telco.adapters.CloudantGeoAdapterApplication</JAXRSApplicationClass>
	
	
	<property name="CLOUDANT_ACCOUNT" displayName="Cloudant Account" defaultValue=""  />
